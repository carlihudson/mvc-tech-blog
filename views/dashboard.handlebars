<h3>Welcome, {{username}}!</h3>
<form>
  <div class="form-group">
    {{!-- <label for="new-post-title">New Post Title</label> --}}
    <input type="text" class="form-control" id="new-post-title" placeholder="Title">
  </div>
 <div class="form-group">
    {{!-- <label for="write-new-post">Write a New Post</label> --}}
    <textarea class="form-control" id="new-post" placeholder="Write a New Post" rows="3"></textarea>
  </div>
</form>
<button type="button" class="btn btn-primary" id="post-button">Post</button>
<h4>Your Posts</h4>
{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card" id={{post.id}}>
  <div class="card-header">
    {{post.title}}
  </div>
  <div class="card-body">
    <p class="card-text">{{post.post_content}}.</p>
    <a href="#" class="btn btn-primary" id="view-post">View Post</a>
    <a href="#" class="btn btn-primary">Edit Post</a>
    <a href="#" class="btn btn-primary" id="delete-post">Delete Post</a>
  </div>
</div>
{{/each}}
{{/if}}

<script src="../js/newpost.js"></script>
<script src="../js/deletepost.js"></script>
