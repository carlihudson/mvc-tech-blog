{{#each posts as |post|}}
<div class="card">
  <div class="card-header">
  <p class ="post-title">{{post.title}}</p> 
    <p class="post-author"> {{user.username}} on {{format_date post.timestamp}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">{{post.post_content}}</p>
    <a href="/posts/{{post.id}}" class="btn btn-primary" id="view-post" >View Post</a>
  </div>
</div>
{{/each}}