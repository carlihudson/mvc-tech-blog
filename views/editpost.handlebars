<h3>Edit Post</h3>
<form>
    <div class="form-group">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <input type="text" class="form-control" id="post-title" value="{{post.title}}">
  </div>
   <div class="form-group">
    <textarea class="form-control" id="post-content"rows="10">{{post.post_content}}</textarea>
  </div> 
</form>
<button type="button" class="btn btn-primary" id="update-button">Update</button>
<button type="button" class="btn btn-primary" id="delete-button">Delete</button>


<script src="../js/editpost.js"></script>