<h3>{{post.title}}</h3>
<h4> - {{post.user.username}} at {{format_date post.timestamp}} </h4>
    <div class="card">
  <div class="card-body">
    <p class="card-text">{{post.post_content}}</p>
    </card>
   {{#each post.comments as |comment|}}
<div class="card">
  <div class="card-body">
    <p class ="card-text" id="comment-user">{{comment.user.username}} at {{format_date comment.timestamp}}</p>
    <p class="card-text">{{comment.comment_content}}</p>
  </div>
</div>
{{/each}}
<form>
   <div class="form-group">
    <input type="hidden" id="post-id" value="{{post.id}}" />
    <textarea class="form-control" id="new-comment" placeholder="Write a Comment" rows="3"></textarea>
  </div>
</form>
    <a href="#" class="btn btn-primary" id="add-comment">Add a Comment</a>
  </div>
</div>

<script src="../js/addcomment.js"></script>